@model TrackFittNumberTwo.Models.Total

@{
    ViewData["Title"] = "Create";
}

<h1>Create a Food</h1>

<h4>MacroNutrient Totals</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalCalories" class="control-label"></label>
                <input asp-for="TotalCalories" class="form-control" />
                <span asp-validation-for="TotalCalories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalCarbs" class="control-label"></label>
                <input asp-for="TotalCarbs" class="form-control" />
                <span asp-validation-for="TotalCarbs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalFats" class="control-label"></label>
                <input asp-for="TotalFats" class="form-control" />
                <span asp-validation-for="TotalFats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalProtein" class="control-label"></label>
                <input asp-for="TotalProtein" class="form-control" />
                <span asp-validation-for="TotalProtein" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
